@{
    Layout = "_Layout.cshtml";
}
@section header{
    <style type="text/css">
        .usr{background-color:#fff;color:#000;}
        .usr h2{padding:10px; font-weight:bold; font-size:14px;border-bottom:1px solid #CCCCCC; margin-bottom:10px;}
        .usr-nav-block{border-bottom:1px solid #CCCCCC; float:left; font-size:14px; padding-left:10px; position:relative;width:960px;}
        .usr-nav-block li{float:left; margin-left:5px;}
        .usr-nav-block a{ background-color:#E5EEF7; border:1px solid #CCCCCC;color:#484853; float:left; letter-spacing:1px;padding:5px 10px; position:relative;top:1px;}
        .usr-nav-block a.current{ background-color:white; border-bottom:1px solid white; cursor:default; font-weight:bold; letter-spacing:0;padding:5px 10px;}
         .text{border:1px solid #BBBBBB; height:16px;padding:4px 3px; width:200px;}
        .usr-content{padding:10px;}
        
        .msg{color:Red; padding:10px; display:block;font-weight:bold;border:1px red dotted; margin-bottom:10px;}
    </style>
    <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    @RenderSection("header", false)
}
<div class="usr clearfix">
    <h2>@(Hite.Mvc.LanguageResourceHelper.GetString("user-center-text",PageData["SiteInfo"].Language))</h2>
    @RenderBody()
</div>

@section footer{
    @RenderSection("footer", false)
}
