@{
    ViewBag.Title = @Hite.Mvc.LanguageResourceHelper.GetString("register-text", PageData["SiteInfo"].Language);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    <style type="text/css">
        .register{margin:0 10px; background:none repeat scroll 0 0 #FFFFFF;padding-top:10px;}
        .tab{padding-left:400px;}
        .item{ height:40px; line-height:26px;}
        .label{text-align:right;width:350px; display:block;float:left;}
        .fl{float:left;}
        .text{border:1px solid #BBBBBB; height:16px;padding:4px 3px; width:240px;}
        .tip{color:Gray;clear:both;}
    </style>
    <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
}
<div class="banner"><img src="/images/register.jpg" alt="用户注册" /></div>
<form id="registerForm" action="" method="post">
<div class="register">
    <div class="tab"><img src="/images/register_tip.jpg" /></div>
    <div class="form">
        @Html.ValidationSummary()
        @if(ViewBag.Msg != null){
            switch((int)ViewBag.Msg){
                case 1 :
                    <text><div class="validation-summary-errors"><span style="font-size:14px; font-weight:bold;">@Hite.Mvc.LanguageResourceHelper.GetString("register-success-text", PageData["SiteInfo"].Language)，<a href="login">@Hite.Mvc.LanguageResourceHelper.GetString("login-text", PageData["SiteInfo"].Language)</a></span></div></text>
                    break;
                case 0:
                    <text><div class="validation-summary-errors"><ul><li>@Hite.Mvc.LanguageResourceHelper.GetString("register-error-text", PageData["SiteInfo"].Language)</li></ul></div></text>
                    break;
            }
        }
        <div class="item">
            <span class="label">@Hite.Mvc.LanguageResourceHelper.GetString("username-text", PageData["SiteInfo"].Language)：</span>
            <div class="fl">@Html.TextBox("txtUserName", Request["txtUserName"], new { @class = "text required",maxlength="20" })<div class="tip">用户名只能由英文、数字及“_”、“-”组成,只能在4-20位字符之间</div></div>
        </div>
        <div class="clear"></div>
        <div class="item">
            <span class="label">@Hite.Mvc.LanguageResourceHelper.GetString("pwd-text", PageData["SiteInfo"].Language)：</span>
            <div class="fl">@Html.Password("txtUserPwd", "", new { @class = "text required password", maxlength = "20" })</div>
        </div>
        <div class="item">
            <span class="label">@Hite.Mvc.LanguageResourceHelper.GetString("confirm-pwd-text", PageData["SiteInfo"].Language)：</span>
            <div class="fl">@Html.Password("txtUserPwdConfirm", "", new { @class = "text required", equalTo = "#txtUserPwd", maxlength = "20" })</div>
        </div>
        <div class="item">
            <span class="label">Email：</span>
            <div class="fl">@Html.TextBox("txtEmail", Request["txtEmail"], new { @class = "text required email", maxlength = "50" })</div>
        </div>
        <div class="item">
            <span class="label">@Hite.Mvc.LanguageResourceHelper.GetString("realname-text", PageData["SiteInfo"].Language)：</span>
            <div class="fl">@Html.TextBox("txtRealName", Request["txtRealName"], new { @class = "text", maxlength = "4" })</div>
        </div>
        <div class="item">
            <span class="label">@Hite.Mvc.LanguageResourceHelper.GetString("company-text", PageData["SiteInfo"].Language)：</span>
            <div class="fl">@Html.TextBox("txtCompany", Request["txtCompany"], new { @class = "text" })</div>
        </div>
        <div class="item">
            <span class="label">@Hite.Mvc.LanguageResourceHelper.GetString("phone-text", PageData["SiteInfo"].Language)：</span>
            <div class="fl">@Html.TextBox("txtPhone", Request["txtPhone"], new { @class = "text", maxlength = "15" })</div>
        </div>
        <div class="item">
            <span class="label">@Hite.Mvc.LanguageResourceHelper.GetString("industry-text", PageData["SiteInfo"].Language)：</span>
            <div class="fl">@Hite.Mvc.ExtensionHtmlHelper.RenderUserIndustryDowndownList("ddlIndustry")</div>
        </div>
        <div class="item">
            <span class="label">&nbsp;</span>
            <div class="fl"><input type="submit" value="@Hite.Mvc.LanguageResourceHelper.GetString("register-text", PageData["SiteInfo"].Language)" />&nbsp;&nbsp;<a href="login">@Hite.Mvc.LanguageResourceHelper.GetString("login-text", PageData["SiteInfo"].Language)</a></div>
        </div>
    </div>
</div>
</form>
@section footer{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#registerForm").validate({ messages: {
                    txtUserName: "@Hite.Mvc.LanguageResourceHelper.GetString("validate-enter-username-text", PageData["SiteInfo"].Language)",
                    txtUserPwd : "@Hite.Mvc.LanguageResourceHelper.GetString("validate-enter-old-pwd-text", PageData["SiteInfo"].Language)",
                    txtUserPwdConfirm : "@Hite.Mvc.LanguageResourceHelper.GetString("validate-repeat-pwd-text", PageData["SiteInfo"].Language)",
                    txtEmail : "@Hite.Mvc.LanguageResourceHelper.GetString("validate-enter-email-text", PageData["SiteInfo"].Language)",
                    ddlIndustry: "@Hite.Mvc.LanguageResourceHelper.GetString("validate-enter-industry-text", PageData["SiteInfo"].Language)"
                }
            });
        });
    </script>
}

