<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="//www.hite.com.cn/favicon.ico" type="image/x-icon" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=7" />
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
    <meta name="Keywords" content="@(ViewBag.Keywords != null ? ViewBag.Keywords : "")" />
    <meta name="Description" content="@(ViewBag.Description != null ? ViewBag.Description : "")" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function toggleCollapse(objId) {
            var imgObjId = objId + "_img";
            $('#' + objId).toggle();
            $('#' + imgObjId).attr("src", $('#' + objId).is(":hidden") ? "/images/collapsed_yes.gif" : "/images/collapsed_no.gif");
        }
    </script>
    @RenderSection("header", false)
</head>
<body>
    <div class="header">
        <div class="logo">
            <img src="/images/logo.jpg" /></div>
        <div class="ulink">@Html.Partial("_LoginUserControl")</div>
        <div class="clear">
        </div>
        <div class="header-list">
            <ul>
                <li><a href="/">首页</a></li>
                <li><a href="/">论坛</a></li>
                <li><a href="#">搜索</a></li>
                <li><a href="#">帮助</a></li>
            </ul>
            <div class="header-bt"></div>
        </div>
        <div class="clear">
        </div>
    </div>
    <div class="wrapper">
        @RenderBody()
    </div>
    <div class="footer">
        上海海得控制系统股份有限公司<span class="pipe">|</span><a href="">联系我们</a>
    </div>
    @RenderSection("footer", false)
    <script type="text/javascript">
            var referrer = window.encodeURIComponent(document.referrer);
            var url = "<scr" + "ipt type=\"text/javascript\" src=\"http://www.hite.com.cn/static/statistics?referrer=" + referrer + "\"></scr" + "ipt\>";
            document.write(url);
    </script>
</body>
</html>
